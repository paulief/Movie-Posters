<%= form_for(@movie_request) do |f| %>
  <% if @movie_request.errors.any? %>
    <div id="error_explanation">
      <h2>Error</h2>

      <ul>
      <% @movie_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Movie Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :year, "Release Year" %><br>
    <%= f.text_field :year %>
  </div>
  <div class="actions">
    <%= f.submit "Get Movie Poster" %>
  </div>
<% end %>
